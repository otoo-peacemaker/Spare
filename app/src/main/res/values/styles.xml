<resources
    xmlns:ns1="http://schemas.android.com/apk/res-auto">

    <style name="Widget.Theme.Spare.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ThemeOverlay.Spare.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="ButtonElevationStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:stateListAnimator" ns1:ignore="NewApi" />
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="elevation">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="rippleColor">@color/md_theme_light_onSecondary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.ElevatedButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#87898E</item>
        <item name="hintTextColor">#87898E</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#87898E</item>
        <item name="boxBackgroundColor">@color/md_theme_light_background</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
    </style>

    <style name="ExtendedFloatingActionButtonStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="icon">@drawable/ico_add_btn</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>

    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleMarginStart">120dp</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
    </style>

    <drawable name="ic_back_arrow">
        <item name="android:drawable">@drawable/navigate_up</item>
        <item name="android:tint">@color/md_theme_light_onPrimary</item>
    </drawable>


</resources>